<div class="row">
  Name
  <%= f.text_field(:name) %>
</div>
<div class="row">
  Rating
  <%= f.number_field(:rating, min: 0, max: 5.5, step: 0.5) %>
</div>
<div class="row">
  Body
  <%= f.text_area(:body, size: "24x6") %>
</div>
<div class="row">
  Url
  <%= f.text_field(:url) %>
</div>
<%= hidden_field_tag(:type, @review.type) %>

<% case @review.review_details %>
  <% when BoozeReviewDetails %>
    <%= render partial: '/reviews/review_forms/booze', locals: {f: f} %>
  <% when RestaurantReviewDetails %>
    <%= render partial: '/reviews/review_forms/restaurant', locals: {f: f} %>
  <% when RestaurantItemReviewDetails %>
    <%= render partial: '/reviews/review_forms/restaurant_item', locals: {f: f} %>
  <% when VideoGameReviewDetails %>
    <%= render partial: '/reviews/review_forms/video_game', locals: {f: f} %>
  <% when MovieReviewDetails %>
    <%= render partial: '/reviews/review_forms/movie', locals: {f: f} %>
  <% when TvShowReviewDetails %>
    <%= render partial: '/reviews/review_forms/tv_show', locals: {f: f} %>
  <% when TvShowSeasonReviewDetails %>
    <%= render partial: '/reviews/review_forms/tv_show_season', locals: {f: f} %>
<% end %>